<h1>All Flats</h1><h1 class="mb-4">All Flats</h1>
<div class="row">
  <% @flats.each do |flat| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <% if flat.picture_url.present? %>
          <img src="<%= flat.picture_url %>" class="card-img-top" alt="<%= flat.name %>">
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= flat.name %></h5>
          <p class="card-text"><%= flat.address %></p>
          <p class="card-text"><%= flat.description %></p>
          <p class="card-text">Price per night: <%= flat.price_per_night %></p>
          <p class="card-text">Number of guests: <%= flat.number_of_guests %></p>
          <%= link_to "View Details", flat_path(flat), class: "btn btn-primary" %>
          <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-warning" %>
          <%= link_to "Delete", flat_path(flat), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%= link_to "Add a new flat", new_flat_path, class: "btn btn-primary mt-4" %>

<ul>
  <% @flats.each do |flat| %>
    <li>
      <%= link_to flat.name, flat_path(flat) %> - <%= flat.address %>
      <% if flat.picture_url.present? %>
        <img src="<%= flat.picture_url %>" alt="<%= flat.name %>" class="img-thumbnail" style="width: 100px;">
      <% end %>
      <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-primary" %>
      <%= link_to "Delete", flat_path(flat), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </li>
  <% end %>
</ul>
<%= link_to "Add a new flat", new_flat_path, class: "btn btn-primary" %>
